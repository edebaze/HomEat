    {% if ventes is not empty %}
        {% for vente in ventes %}
            {% set plat = vente.recipes %}
            <div class="ajoutplats col s12 z-depth-3">
                <div class="row valign-wrapper">
                    <div class="col s2"><img class="responsive-img " src="{{ asset(plat.image) }}" id="logo2"></div>
                    <div class="col s2">
                        <p>{{ plat.titre }}</p>
                    </div>
                    <div class="col s2">
                        <p><em>Ingrédients :</em></p>
                    </div>
                    <div class="col s2">
                        <p> <a class="btn-floating btn-large waves-effect waves-light blue" style="font-size: 0.7em">QUANTITE ORDER</a></p>
                    </div>
                    <div class="col s2">
                        <p>{{ plat.hour | date('HH')}}</p>
                    </div>
                    <div class="col s2">
                        <p> <a class="btn-floating btn-large waves-effect waves-light green" style="font-size: 0.7em">{{ plat.price }} * ORDER.QUANTITE</a></p>
                    </div>
                </div>

            </div>
        {% endfor %}

    {% else %}
        <div>
            <h1>Vous n'avez pas de ventes en cours</h1>
        </div>
    {% endif %}


    {% if orders is not empty %}
        {% for order in orders %}
            {% set plat = order.recipes %}
            <div class="ajoutplats col s12 z-depth-3">
                <div class="row valign-wrapper">
                    <div class="col s2"><img class="responsive-img " src="{{ asset(plat.image) }}" id="logo2"></div>
                    <div class="col s2">
                        <p>{{ plat.titre }}</p>
                    </div>
                    <div class="col s2">
                        <p><em>Ingrédients :</em></p>
                    </div>
                    <div class="col s2">
